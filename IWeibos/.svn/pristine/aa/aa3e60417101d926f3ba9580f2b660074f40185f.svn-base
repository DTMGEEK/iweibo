<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/denglubj"
    android:id="@+id/loginlayout"
    >

    <EditText
        android:id="@+id/login_username_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mimaanniu"
        android:hint="@string/login_username_hint"
        android:textColor="@color/white"
        android:maxLength="25"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dip"
        android:singleLine="true"
        ><requestFocus/></EditText>

    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:password="true"
        android:hint="@string/login_password_hint"
        android:maxLength="10"
        android:background="@drawable/mimaan"
        android:ems="10"
        android:singleLine="true"
        android:layout_marginTop="20dip"
        android:layout_below="@id/login_username_et"
        android:layout_alignLeft="@id/login_username_et"
        />


     <ImageView
         android:id="@+id/login_loginbn_iv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/login_button_style"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/login_password_et"
         android:layout_marginTop="30dip"
         android:clickable="true"
         />


    <ImageView
        android:id="@+id/login_register_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/register_button_style"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_loginbn_iv"
        android:layout_marginTop="40dip"
        android:layout_alignRight="@id/login_loginbn_iv"
        />


</RelativeLayout>
