<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bjt"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <EditText
        android:id="@+id/sendreview_review_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_sendreivew_et_height"
        android:background="@drawable/kuang"
        android:singleLine="false"
        android:layout_marginTop="60dip"
        android:maxLength="140"
     >
        <requestFocus/>
     </EditText>
    

    <ImageView
        android:id="@+id/sendreview_send_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/submit_iv_style"
        android:layout_below="@id/sendreview_review_et"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dip"
        android:layout_marginTop="@dimen/activity_sendreivew_iv_paddingtop"
        />



    <ImageView
        android:id="@+id/sendreview_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/back_iv_style"
        android:layout_below="@id/sendreview_review_et"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dip"
        android:layout_marginTop="@dimen/activity_sendreivew_iv_paddingtop"
        />




</RelativeLayout>
