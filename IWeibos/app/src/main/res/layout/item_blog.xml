<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d5f8f5">



    <ImageView
        android:id="@+id/itme_blog_iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/usericon"
        android:layout_marginTop="5dp"/>

    <!-- 右边框架 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">



        <!-- 用户名称、新浪认证部分 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!-- 用户名称 -->
            <TextView android:id="@+id/item_blog_tv_uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#424d54"
                android:textSize="20dp"
                />

            <!-- 新浪认证 -->
            <ImageView android:id="@+id/item_blog_iv_V"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/v"
                android:visibility="gone"/>



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                >

                <!-- 发布时间 -->
                <TextView android:id="@+id/item_blog_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1小时前"
                    android:textColor="#efa608"
                    android:textSize="10dp"
                    />

            </RelativeLayout>
        </LinearLayout>




        <!-- 微博正文内容 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- 微博正文内容 -->
            <TextView
                android:id="@+id/item_blog_tv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#6b717b"
                android:textSize="12dp"
                />



            <ImageView
                android:id="@+id/item_blog_iv_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/preview_pic_loading"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                />

        </LinearLayout>



        <!-- 微博转发内容 -->
        <LinearLayout
            android:id="@+id/item_blog_ll_sublayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:background="@drawable/popup">



            <!-- 微博正文内容 -->
            <TextView
                android:id="@+id/item_blog_tv_subcontent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#6b717b"
                android:textSize="12dp"
                />



            <ImageView
                android:id="@+id/item_blog_iv_content_subpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/preview_pic_loading"
                android:layout_marginTop="3dp"
                />


        </LinearLayout>



        <!-- 微博来源部分 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            >


            <!-- 用户名称 -->
            <TextView android:id="@+id/item_blog_tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来自:Touch Android"
                android:textColor="#9ba0aa"
                android:textSize="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                >

                <TextView android:id="@+id/item_blog_tv_redirect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/redirect_icon"
                    android:text="10"
                    android:textColor="#9ba0aa"
                    android:textSize="10dp"
                    />

                <TextView android:id="@+id/item_blog_tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/comment_icon"
                    android:text="100"
                    android:textColor="#9ba0aa"
                    android:textSize="10dp"
                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
