<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/zhuyebjo"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/shangkuang"
      >
    <TextView
        android:id="@+id/homelayout_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dip"
        android:text="UserName"
        />

    <ImageView
        android:id="@+id/user_title_layout_sendweibo_iv"
        android:layout_width="@dimen/hoem_layout_send_weibo_iv_width"
        android:layout_height="@dimen/hoem_layout_send_weibo_iv_height"
        android:clickable="true"
        android:background="@drawable/send_weibo_iv_style"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        />
  </RelativeLayout>

            <FrameLayout
                android:id="@+id/homelayout_realcontent"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                />


            <android.support.v4.app.FragmentTabHost
                android:id="@android:id/tabhost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bar_bg"
                >
                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0"
                    />

            </android.support.v4.app.FragmentTabHost>

</LinearLayout>
